import mensajeros.*

describe "Test del pago y el destino del paquete" {
    test "Verificar si el paquete est√° pagado" {
        paquete.pagado(false)
        assert.equals(false, paquete.pagado())
        paquete.pagado(true)
        assert.equals(true, paquete.pagado())
    }

    test "Verificar el destino del paquete" {
        paquete.destino(matrix)
        assert.equals(matrix, paquete.destino())
        paquete.destino(puenteBrooklin)
        assert.equals(puenteBrooklin, paquete.destino())
    }

}

describe "Test del peso total y la disponibilidad de llamada de los empleados" {
  test "Test la disponibilidad de llamada de Neo" {
    neo.tieneCredito(false)
    assert.notThat(neo.puedeLlamar())
    neo.tieneCredito(true)
    assert.that(neo.puedeLlamar())
  }

  test "Test del peso variable de Sara" {
    saraConor.peso(50)
    saraConor.vehiculo(moto)
    assert.equals(150, saraConor.pesoTotal())
    saraConor.vehiculo(camion)
    camion.acoplados(2)
    assert.equals(1550, saraConor.pesoTotal())
  }
}